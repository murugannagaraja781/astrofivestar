<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ivAstrologer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_shape"
            android:layout_marginRight="16dp"/>
            <!-- Note: circle_shape is optional, using standard imageview for now -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Astrologer Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"/>

            <TextView
                android:id="@+id/tvSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vedic, Tarot"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹ 20/min"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#059669"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Chat"
            android:textSize="12sp"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Call"
            android:textSize="12sp"
            android:backgroundTint="#059669"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
