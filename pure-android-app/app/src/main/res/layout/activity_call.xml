<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827">

    <!-- Incoming Call View -->
    <LinearLayout
        android:id="@+id/layoutIncoming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivCallerImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/circle_shape"/>

        <TextView
            android:id="@+id/tvCallerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astrologer Calling..."
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="60dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#EF4444"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_marginRight="40dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#10B981"
                android:src="@android:drawable/ic_menu_call"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Active Call View -->
    <LinearLayout
        android:id="@+id/layoutActiveCall"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#E5E7EB"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEndCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#EF4444"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginTop="80dp"/>
    </LinearLayout>

</FrameLayout>
